\definecolor{insee_grey_text}{RGB}{117, 117, 117}
\definecolor{insee_blue_text}{RGB}{04, 47, 128}
\definecolor{insee_light_yellow}{RGB}{255, 230, 144}
\definecolor{insee_lightest_yellow}{RGB}{253, 243, 203}
\definecolor{insee_light_purple}{RGB}{224, 189, 230}
\definecolor{insee_light_green}{RGB}{163, 236, 182}
\definecolor{insee_light_blue}{RGB}{154, 236, 236}
\definecolor{insee_light_grey}{RGB}{217, 217, 217}
\definecolor{insee_light_red}{RGB}{255, 185, 187}

